
{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "allowJs": true,
      "moduleResolution": "node",
      
      "esModuleInterop": true,
      "paths": {"~/*" : ["./src/*"]},
      "plugins": [{ "name": "typescript-plugin-css-modules" }], 
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }
  
 
  
